---
import AccordionButton from "./AccordionButton.astro";
import Card from "./Card.astro";
import Divider from "./Divider.astro";
import TechItem from "./TechItem.astro";

const {
    id,
    jobPicture,
    jobTitle,
    jobTime,
    jobCompany,
    jobDescription,
    jobActivities,
    jobTechnologies,
    jobColor,
} = Astro.props;
---

<style>
    /* Card picture */

    .card-picture {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        background-color: #007f5fff;
    }

    .card-picture img {
        width: 300px;
        height: fit-content;
        border: 0;
    }

    /* Card data */

    .card-data {
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 1.5rem;
    }

    /* Card header */

    .card-header {
        display: flex;
        flex-direction: column;
    }

    .card-header .job-title {
        font-size: 1.45rem;
    }

    .card-header .job-time {
        color: var(--gray);
        font-weight: 600;
        font-size: 0.9rem;
        margin-top: 0.4rem;
    }

    .card-header .job-company {
        font-weight: 600;
        font-size: 0.9rem;
        color: var(--primary_3);
    }

    /* Job description */

    .card-data .description {
        margin: 1.5rem 0;
    }

    /* Accordion */

    .accordion {
        flex-direction: column;
        max-height: 0;
        display: flex;
        overflow: hidden;
        transition: all 350ms ease;
    }

    .accordion.expanded {
        max-height: 500px;
    }

    .accordion-section {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .accordion-section ul {
        list-style: outside;
        color: var(--text_2);
        font-size: 0.9rem;
        margin-left: 1.1rem;
    }

    .accordion-title {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--text);
    }

    /* Tech list */

    .tech-list {
        display: flex;
        list-style: none;
        column-gap: 1.1rem;
        row-gap: 0.45rem;
        width: 95%;
        flex-wrap: wrap;
        margin-left: 0 !important;
        white-space: nowrap;
    }

    @media screen and (max-width: 600px) {
        .card-data {
            padding: 1rem;
        }

        .card-header .job-title {
            font-size: 1.2rem;
        }

        .card-header .job-time {
            font-size: 0.93rem;
        }
    }
</style>
<Card>
    <div class="card-picture">
        <img
            src={`/jobs/${jobPicture}`}
            alt={`Logo of ${jobCompany} where I worked as a ${jobTitle}`}
            loading="lazy"
        />
    </div>
    <Divider />
    <div class="card-data">
        <div class="card-header">
            <h1 class="job-title">{jobTitle}</h1>
            <span class="job-company">{jobCompany}</span>
            <span class="job-time">{jobTime}</span>
        </div>
        <p class="description">{jobDescription}</p>
        <div class="accordion" id={`accordion-${id}`}>
            <div class="accordion-section">
                <span class="accordion-title">Actividades</span>
                <ul>
                    {jobActivities.map((activity) => <li>{activity}</li>)}
                </ul>
            </div>
            <div class="accordion-section">
                <span class="accordion-title">Tecnolog√≠as</span>
                <ul class="tech-list">
                    {
                        jobTechnologies.map((technology) => (
                            <TechItem
                                name={technology.name}
                                icon={technology.icon}
                            />
                        ))
                    }
                </ul>
            </div>
        </div>
        <AccordionButton dataTarget={id} />
    </div>
</Card>
