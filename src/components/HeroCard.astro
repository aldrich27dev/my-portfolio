---
import Card from "./Card.astro";
const { heroName, heroDescription, heroPicture } = Astro.props;
---

<style>
    .card-body {
        padding: 1.2rem;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 0.5rem;
    }

    .hero-picture {
        height: 7rem;
        height: 7rem;
        border-radius: 100%;
        overflow: hidden;
        object-fit: contain;
        margin-bottom: 0.5rem;
        border: 2px solid var(--hover);
    }

    .hero-picture img {
        height: 100%;
        width: 100%;
    }

    .hero-name {
        font-size: 1.05rem;
        font-weight: 600;
        color: var(--text);
    }

    .hero-description {
        font-size: 0.8125rem;
    }
</style>
<Card>
    <div class="card-body">
        <div class="hero-picture">
            <img src={`/heros/${heroPicture}`} alt={heroName} loading="lazy" />
        </div>
        <h1 class="hero-name">{heroName}</h1>
        <p class="hero-description">{heroDescription}</p>
    </div>
</Card>
