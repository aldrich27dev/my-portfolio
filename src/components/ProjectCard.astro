---
import AccordionButton from "./AccordionButton.astro";
import Card from "./Card.astro";
import Divider from "./Divider.astro";
import TechItem from "./TechItem.astro";

const {
    id,
    projectPicture,
    projectTitle,
    projectRepo,
    projectSite,
    projectDescription,
    projectTechnologies,
} = Astro.props;
---

<style>
    .card-picture {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 200px;
        padding: 1.5rem;
        gap: 1rem;
    }

    .card-picture img {
        width: 200px;
        height: fit-content;
    }

    /* Card data */

    .card-data {
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 1.5rem;
    }

    /* Card header */

    .card-header {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .card-header .project-title {
        font-size: 1.45rem;
    }

    .project-links {
        display: flex;
        gap: 0.8rem;
    }

    .project-links .btn {
        padding: 0.4rem 1rem;
        background-color: var(--hover);
        border-radius: 6px;
        color: var(--text_2);
        text-decoration: none;
        font-size: 0.8125rem;
        font-weight: 400;
        gap: 0.4rem;
        transition: all 300ms ease;
    }

    .project-links .btn svg {
        stroke: var(--text_2);
        transition: 300ms ease;
    }

    .project-links .btn:hover {
        background-color: var(--text);
        color: var(--background);
    }

    .project-links .btn:hover svg {
        stroke: var(--background);
    }

    /* Job description */

    .card-data .description {
        margin: 1.3rem 0;
    }

    /* Accordion */

    .accordion {
        flex-direction: column;
        max-height: 0;
        display: flex;
        overflow: hidden;
        transition: all 350ms ease;
    }

    .accordion.expanded {
        max-height: 500px;
    }

    .accordion-section {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-bottom: 1.3rem;
    }

    .accordion-section ul {
        list-style: outside;
        color: var(--text_2);
        font-size: 0.9rem;
        margin-left: 1rem;
    }

    .accordion-title {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--text);
    }

    /* Tech list */

    .tech-list {
        display: flex;
        list-style: none;
        column-gap: 1.1rem;
        row-gap: 0.45rem;
        width: 95%;
        flex-wrap: wrap;
        margin-left: 0 !important;
        white-space: nowrap;
    }

    @media screen and (max-width: 668px) {
        .card-data {
            padding: 1rem;
        }

        .card-header .project-title {
            font-size: 1.2rem;
        }
    }
</style>
<Card>
    <div class="card-picture">
        <img
            src={`/projects/${projectPicture}`}
            alt={`Logo of ${projectTitle} project`}
        />
    </div>
    <Divider />
    <div class="card-data">
        <div class="card-header">
            <h1 class="project-title">{projectTitle}</h1>
            <div class="project-links">
                {
                    projectRepo && (
                        <a href={projectRepo} class="btn" target="_blank">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="20"
                                height="20"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke-width="1.5"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="feather feather-github"
                            >
                                <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
                            </svg>
                            GitHub
                        </a>
                    )
                }
                {
                    projectSite && (
                        <a href={projectSite} class="btn" target="_blank">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                height="20"
                                width="20"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244"
                                />
                            </svg>
                            Ir al sitio
                        </a>
                    )
                }
            </div>
        </div>
        <p class="description">{projectDescription}</p>
        <div class="accordion" id={`accordion-${id}`}>
            <div class="accordion-section">
                <span class="accordion-title">Tecnolog√≠as</span>
                <ul class="tech-list">
                    {
                        projectTechnologies.map((technology) => (
                            <TechItem
                                name={technology.name}
                                icon={technology.icon}
                            />
                        ))
                    }
                </ul>
            </div>
        </div>
        <AccordionButton dataTarget={id} />
    </div>
</Card>
