---
import "../styles/education-card.css";

const {
    id,
    educationPicture,
    educationTitle,
    educationType,
    educationTime,
    educationCompany,
    educationLink,
} = Astro.props;
---

<!-- <span class="circle"></span> -->
<article class="education-card">
    <div class={"education-picture"}>
        <img
            src={`/education/${educationPicture}`}
            alt={`Picture of ${educationTitle} degree`}
            loading="lazy"
        />
    </div>
    <div class="education-data">
        <div class="data-section">
            {
                educationType && (
                    <small class="education-type">{educationType}</small>
                )
            }
            {
                educationLink ? (
                    <a
                        href={educationLink}
                        class="education-link"
                        target="_blank"
                    >
                        <h1>
                            {educationTitle}
                            {"  "}
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                height="15"
                                width="15"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                                />
                            </svg>
                        </h1>
                    </a>
                ) : (
                    <h1 class="education-title">{educationTitle}</h1>
                )
            }
        </div>
        <div class="data-section">
            <span class="education-time">{educationTime}</span>
            <span class="education-company">{educationCompany}</span>
        </div>
    </div>
</article>
