---
import "../styles/education-card.css";

const {
    id,
    educationPicture,
    educationTitle,
    educationType,
    educationTime,
    educationCompany,
    educationLink,
} = Astro.props;
---

<!-- <span class="circle"></span> -->
<article class="education-card">
    <div class="education-picture">
        <img
            src={`/education/${educationPicture}`}
            alt={`Picture of ${educationTitle} degree`}
        />
    </div>
    <div class="education-data">
        <div class="education-header">
            {
                educationType && (
                    <small class="education-type">{educationType}</small>
                )
            }
            <h1 class="education-title">{educationTitle}</h1>
            <span class="education-time">{educationTime}</span>
            <span class="education-company">{educationCompany}</span>
        </div>
        {
            educationLink && (
                <a
                    href={educationLink}
                    class="btn education-link"
                    target="_blank"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        height="20"
                        width="20"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244"
                        />
                    </svg>
                    Ver credencial
                </a>
            )
        }
    </div>
</article>
